{
  "name": "hydefront",
  "version": "0.0.0",
  "description": "Frontend assets for HydePHP",
  "main": "_site/index.html",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "php hyde test",
    "build": "php hyde build",
    "watch": "concurrently  \"npm:watch-livereload\" \"npm:watch-build\" \"npm:watch-sass\" \"npm:watch-tailwind\"",
    "watch-livereload": "npx browser-sync _site -w",
    "watch-build": "chokidar ./_posts/*.md ./resources/views/**/*.blade.php -c \"npm run build\"",
    "watch-sass": "sass src/resources/sass/app.scss _site/media/app.css -w",
    "watch-tailwind": "npx tailwindcss -i ./src/resources/sass/tailwind.scss -o ./_site/media/tailwind.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caendesilva/hyde.git"
  },
  "keywords": [
    "hydephp",
    "hyde",
    "static",
    "laravel",
    "blog"
  ],
  "author": "Caen De Silva",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/caendesilva/hyde/issues"
  },
  "homepage": "https://github.com/caendesilva/hyde#readme",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.2",
    "browser-sync": "^2.27.9",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.0.0",
    "tailwindcss": "^3.0.23"
  }
}
